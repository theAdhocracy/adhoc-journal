---
const { data } = Astro.props;
---

<aside>
	<time
		class="time-divider"
		datetime={`${data.duration.start.date} ${data.duration.start.time}`}
	>
		{data.duration.start.time}
	</time>
	<span>ðŸ“…</span>
	<h2>{data.title}</h2>
	{
		data.duration.length > 0 && (
			<time datetime={`${data.duration.end.date} ${data.duration.end.time}`}>
				{data.duration.end.time}
			</time>
		)
	}
	<p>{data.location.title}, {data.location.location?.location}</p>
	{
		data.people?.length > 0 && (
			<p>
				With{" "}
				{data.people.map((person: any, index: number) => {
					return (
						<span>
							{index !== 0 && ", "}
							<a href={`/person/${person.slug}`}>{person.name}</a>
						</span>
					);
				})}
			</p>
		)
	}
</aside>

<style>
	aside {
		padding: 1rem;
		text-align: center;

		time {
			--color: rebeccapurple;
		}
	}
</style>
